{
  "type": "commonjs",
  "types": "node, jest",
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "rootDirs": ["src"],
    "module": "commonjs",
    "target": "esnext",
    "allowJs": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@types/*": ["src/types/*"],
      "@utils/*": ["src/utils/*"]
    },
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true
  }
}
